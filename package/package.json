{
  "name": "cable_ready",
  "version": "4.0.8",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com:hopsoft/cable_ready.git"
  },
  "author": "Nathan Hopkins <natehop@gmail.com>",
  "contributors": [
    "Andrew Mason <andrewmcodes@protonmail.com>"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "morphdom": "^2.5.9"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts'",
    "lint:fix": "tslint --project tsconfig.json -t codeFrame --fix 'src/**/*.ts'",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts && typedoc --out docs --target es6 --theme minimal --mode file src",
    "build:doc": "typedoc --out docs/api --name CableReady --mode file --readme none --excludePrivate --excludeProtected --excludeNotExported --hideGenerator --tsconfig tsconfig.json src",
    "watch": "tsc -b -w packages/tsconfig.build.json && lerna run --parallel watch",
    "start": "rollup -c rollup.config.ts -w",
    "prerelease": "yarn build",
    "release:beta": "yarn release --npm-tag=beta",
    "clean": "rimraf dist *.tsbuildinfo"
  }
}
